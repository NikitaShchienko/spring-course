<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person" class="com.luxoft.springioc.lab1.model.UsualPerson" autowire="constructor">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="name" value="John Smith"/>
        <constructor-arg name="age" value="35"/>
        <constructor-arg name="country" ref="country"/>
    </bean>

    <bean id="country" class="com.luxoft.springioc.lab1.model.Country" autowire="constructor">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="name" value="Russia"/>
        <constructor-arg name="codeName" value="RU"/>
        <constructor-arg name="a" ref="a" />
    </bean>

    <bean id="a" class="com.luxoft.springioc.lab1.model.A" autowire="constructor">
        <constructor-arg name="id" value="1"/>
    </bean>

    <bean id="country1" class="com.luxoft.springioc.lab1.model.Country" autowire="constructor">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="codeName" value="SDSD"/>
        <constructor-arg name="name" value="SDSD"/>
    </bean>

</beans>